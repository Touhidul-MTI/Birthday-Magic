<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.imti.birthdaymagic.Result"
    android:background="#ECEFF1"
    android:id="@+id/result_fr1">
    <ScrollView
        android:id="@+id/result_sv1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:id="@+id/result_rl1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/result_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIRTHDAY!!!"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:background="#448AFF"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/result_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:textColor="#FF7043"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/result_tv1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/result_b1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Home to Play Again"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ECEFF1"
                android:background="@drawable/customstyle_buttonclick"
                android:layout_below="@id/result_tv2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/resultiv11"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/loon"
                android:layout_below="@id/result_b1"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
